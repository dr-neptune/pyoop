<FirstScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.80
        TextInput:
            id: txt
            size_hint_y: 0.1
        Button:
            text: "Search Image"
            size_hint_y: 0.1
            on_press: root.clear_image()
            on_release: root.set_image()

<RootWidget>:
    FirstScreen:
        id: first_screen
        name: "first_screen"
